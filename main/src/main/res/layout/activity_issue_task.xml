<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="检查对象"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/name_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/name_tv"
                android:background="@null"
                android:hint="请填写检查对象"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                style="@style/EditTextStyle"
                />

            <View
                android:id="@+id/v_1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_color"
                app:layout_constraintLeft_toLeftOf="@+id/name_tv"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                />


            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="检查地点"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_1"
                />

            <EditText
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/address_tv"
                android:background="@null"
                android:hint="请填写检查地点"
                android:textSize="16sp"
                android:layout_marginRight="20dp"
                android:textColor="@color/text_color"
                style="@style/EditTextStyle"
                />

            <View
                android:id="@+id/v_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_color"
                app:layout_constraintLeft_toLeftOf="@+id/address_tv"
                app:layout_constraintTop_toBottomOf="@+id/address"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/safety_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="安全隐患问题描述:"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_2"
                />

            <EditText
                android:id="@+id/safety"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:scrollbars="vertical"
                android:background="@drawable/background_solid_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/safety_tv"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="事件内容描述"
                android:textSize="16sp"
                android:gravity="top"
                />



            <TextView
                android:id="@+id/change_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="整改要求:"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/safety"
                />

            <EditText
                android:id="@+id/change"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:scrollbars="vertical"
                android:background="@drawable/background_solid_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/change_tv"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="请填写整改要求"
                android:textSize="16sp"
                android:gravity="top"
                />


            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="整改时限"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/change"
                />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/time_tv"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:hint="请选择整改时限"
                android:layout_marginRight="20dp"
                />

            <View
                android:id="@+id/v_5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_color"
                app:layout_constraintLeft_toLeftOf="@+id/time_tv"
                app:layout_constraintTop_toBottomOf="@+id/time"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                />





            <TextView
                android:id="@+id/intact_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="消防安全设施是否完好"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_5"
                />

            <TextView
                android:id="@+id/intact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/intact_tv"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:background="@null"
                android:text="否"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                />

            <Switch
                android:id="@+id/is_intact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:track="@drawable/switch_selector_green"
                android:thumb="@drawable/switch_white_circle_selector"
                app:layout_constraintTop_toTopOf="@+id/intact"
                app:layout_constraintBottom_toBottomOf="@+id/intact"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                />

            <View
                android:id="@+id/v_8"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_color"
                app:layout_constraintLeft_toLeftOf="@+id/is_intact_tv"
                app:layout_constraintTop_toBottomOf="@+id/intact"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                />


            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现场图片:"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_8"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photo_recycler1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_1"
                android:layout_margin="10dp"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</LinearLayout>