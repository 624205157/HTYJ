<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:text="办结"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/v_1"
        app:layout_constraintBottom_toTopOf="@+id/time"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/transactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:text="(处理人: 管理员)"
        app:layout_constraintTop_toTopOf="@+id/state"
        app:layout_constraintBottom_toBottomOf="@+id/state"
        app:layout_constraintLeft_toRightOf="@+id/state"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:text="2020年8月15日11:42:02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state"
        app:layout_constraintLeft_toLeftOf="@+id/state"
        android:layout_marginBottom="10dp"
        />

    <View
        android:id="@+id/v_1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/background_solid_2"
        android:layout_marginLeft="20dp"
        />

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/background_solid_2"
        app:layout_constraintLeft_toLeftOf="@+id/v_1"
        app:layout_constraintRight_toRightOf="@+id/v_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>