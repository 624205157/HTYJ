<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <include layout="@layout/title_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_background"
            />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/head_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_1"
            android:background="@drawable/background_solid_1"
            app:layout_constraintDimensionRatio="5:1"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >

            <EditText
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/user_name_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="请输入用户名"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:singleLine="true"
                />

            <ImageView
                android:id="@+id/user_name_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@mipmap/user_name_img"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_1"
            android:background="@drawable/background_solid_1"
            app:layout_constraintDimensionRatio="5:1"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/password_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="请输入密码"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:singleLine="true"
                android:inputType="textPassword"
                />

            <ImageView
                android:id="@+id/password_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@mipmap/password_img"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <CheckBox
            android:id="@+id/automatic_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/cl_2"
            app:layout_constraintTop_toBottomOf="@+id/cl_2"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/automatic_login"
            app:layout_constraintTop_toTopOf="@+id/automatic_login"
            app:layout_constraintBottom_toBottomOf="@+id/automatic_login"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/cl_2"
            app:layout_constraintTop_toTopOf="@+id/automatic_login"
            app:layout_constraintBottom_toBottomOf="@+id/automatic_login"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/automatic_login"
            app:layout_constraintBottom_toBottomOf="@+id/automatic_login"
            app:layout_constraintRight_toLeftOf="@+id/register"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:padding="5dp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintRight_toLeftOf="@+id/register"
            app:layout_constraintLeft_toRightOf="@+id/forget_password"
            app:layout_constraintTop_toTopOf="@+id/forget_password"
            app:layout_constraintBottom_toBottomOf="@+id/forget_password"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            />

        <TextView
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="登录"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/background_solid_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            app:layout_constraintVertical_bias="0.65"
            />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他方式登录"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.8"
            android:textColor="#fdc371"
            android:textSize="13sp"
            />





        <ImageView
            android:id="@+id/wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_img"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            app:layout_constraintLeft_toLeftOf="@+id/tv_1"
            app:layout_constraintRight_toLeftOf="@+id/qq"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qq_img"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            app:layout_constraintLeft_toRightOf="@+id/wechat"
            app:layout_constraintRight_toLeftOf="@+id/weibo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />



        <ImageView
            android:id="@+id/weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weibo_img"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            app:layout_constraintRight_toRightOf="@+id/tv_1"
            app:layout_constraintLeft_toRightOf="@+id/qq"
            android:layout_marginTop="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>